{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Date Time",
    "description": "API to return date and time based on a given timezone"
  },
  "host": "localhost:3100",
  "basePath": "/dateTime",
  "schemes": [
    "http",
    "https"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/{timezone}": {
      "get": {
        "description": "Get current date and time based on timezone",
        "operationId": "getDateTime",
        "parameters": [
          {
            "name": "timezone",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "normal response",
            "schema": {
              "$ref": "#/definitions/getDateTimeOutput"
              }
            },
            "default": {
              "description": "unexpected error",
              "schema": {
                "$ref": "#/definitions/errorModel"
              }
            }
        }
      }
    }
  },
  "definitions": {
    "getDateTimeOutput": {
      "required": [
        "date",
        "time"
      ],
      "properties": {
        "date": {
          "maxLength": 10,
          "type": "string"
        },
        "time": {
          "maxLength": 10,
          "type": "string"
        }
      }
    },
    "errorModel": {
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}

